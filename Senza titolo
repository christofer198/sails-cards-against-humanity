<div className="parallax-container overlay white-text" style={{height: `${this.props.height}vh`}}>
  {this.props.innerhtml}
  <div className="parallax"><img src={this.props.image} className="responsive"/></div>
</div>

innerHTML = (layout=1, header=this.dummyHead, body=this.dummyBody) => {
  if(layout==1){
    return (
      <div ref="container" className="row" style={{visibility: `${this.state.visibilityOne}`}}>
        <div className="col s12 m2 offset-m2">
          <img src={CoffeeOne} height="400px" className={this.state.slideRightOne}/>
        </div>
        <div className="col s12 m6 offset-m1">
          <div className={this.state.slideLeftOne}>
            <h1>{header}</h1>
            <p>{body}</p>
          </div>
        </div>
      </div>
    )
  } else if(layout==2){
    return (
      <div className="row" style={{visibility: `${this.state.visibilityTwo}`}}>
        <div className="col s12 m6 offset-m1">
          <div className={this.state.slideLeftTwo}>
            <h1>{header}</h1>
            <p>{body}</p>
          </div>
        </div>
        <div className="col s12 m2 offset-m1">
          <img src={CoffeeTwo} height="400px" className={this.state.slideRightTwo}/>
        </div>
      </div>
    )
  } else if (layout==4) {
    return(
      <div className="row center-align" style={{marginTop: "20%"}}>
        <h4 className="slideRight" >Merging Coffee</h4>
        <h4 >&</h4>
        <h4 className="slideLeft">Community</h4>
        <a href="javascript:void(0)"><i className="fa fa-angle-down angledown white-text" onClick={this.handleScroll} style={{fontSize: "48px"}}></i></a>
      </div>
    )
  }
}


{this.props.format ? <div className="col s12 m4 pull-m8"> : <div className="col s12 m4">}

{this.props.format ? <div className="col s12 m8 push-m4"> : <div className="col s12 m8">}
